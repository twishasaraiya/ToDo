<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Todo</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css" />
    <!-- Juery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js" type="text/javascript" ></script>

    <!-- -->
    <link rel="stylesheet" href="/css/todo.css">
    <script src="/js/todo.js" type="text/javascript"></script>
  </head>
  <body>
    <header>
    <h3>Hello, <%= username %></h3>
    <a href="/logout"><button type="button" class="logout">Logout</button></a>
  </header>
    <form class=""
          action="//localhost:3001/todos/add"
          method="post">
          <input type="text" name="task" value="" placeholder = "Enter new task">
          <button type="submit" class="add">Add</button>
    </form>

    <ul id="task-list">
      <% if (typeof todos === "object") { %>
          <% for(i in todos) { %>
              <li id="<%= todos[i].id %>">
                <input class="checkbox" type="checkbox">
                <span><%= todos[i].text %></span>
                <button type="button" class="edit">Edit</button>
              </li>
          <% } %>
      <% } else { %>
      <%= todos %>
      <% } %>
    </ul>
  </body>

</html>
