<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>Todo</title>
    <!-- Juery -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.0/jquery.min.js" type="text/javascript" ></script>

    <!-- -->
    <link rel="stylesheet" href="/css/todo.css">
    <script src="/js/todo.js" type="text/javascript"></script>
  </head>
  <body>
    <header>
    <h3>Hello, <%= username %></h3>
    <a href="/logout"><button type="button" class="logout blue">Logout</button></a>
  </header>
    <div>
          <input type="text" name="task" value="" placeholder = "Enter new task">
          <button type="submit" class="add green">Add</button>
    </div>

    <ul id="task-list">
      <% if (todos.length > 0) { %>
          <% for(i in todos) { %>
              <li style="background-color:<%= todos[i].color %>" id="<%= todos[i].id %>">
                <input class="checkbox" type="checkbox">
                <span><%= todos[i].text %></span>
                <button type="button" class="edit green">Edit</button>
                <button type="button" class="delete blue">Delete</button>
              </li>
          <% } %>
          <% } %>
    </ul>
  </body>

</html>
